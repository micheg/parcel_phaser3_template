{
	"name": "parcel_phaser3_template",
	"version": "2.0.0",
	"description": "A template project for Phaser 3 using Parceljs, single bundle.",
	"scripts":
	{
		"start": "parcel src/index.html -p 8080",
		"build": "parcel build src/index.html --out-dir dist --no-source-maps"
	},
	"author": "micheg",
    "keywords":
	[
		"phaser",
		"phaser3",
		"phaser-boilerplate"
	],
	"license": "MIT",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/micheg/parcel_phaser3_template.git"
	},
	"homepage": "https://github.com/micheg/parcel_phaser3_template",
	"devDependencies":
	{
		"minimist": ">=1.2.2",
		"parcel-bundler": "^1.12.5",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3"
	},
	"dependencies":
	{
		"phaser": "^3.54.0"
	},
	"parcelCleanPaths":
	[
		"dist"
	],
	"staticFiles":
	{
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
